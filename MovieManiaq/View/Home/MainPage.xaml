                                                   HorizontalTextAlignment="Start"
                                                   VerticalTextAlignment="Start"
                                                   Style="{StaticResource Label}"
                                                   Text="{Binding overview}"/>
                                            <Label Grid.Row="2"
                                                   Grid.Column="1"
                                                   HorizontalTextAlignment="Center"
                                                   Style="{StaticResource Label}"
                                                   Text="{Binding release_date}"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CarouselView.ItemTemplate>
                        </CarouselView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <IndicatorView x:Name="Indicator_TopRated"
                           Style="{StaticResource IndicatorView}"
                           HorizontalOptions="CenterAndExpand"/>
            <Label Style="{StaticResource Label}"
                   Text="Popular"
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   Margin="3"/>
            <CollectionView ItemsSource="{Binding ListPopular}"
                            HeightRequest="250">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <CarouselView Style="{StaticResource CarouselView}"
                                      ItemsSource="{Binding results}"
                                      IndicatorView="{x:Reference Indicator_Popular}">
                            <CarouselView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal"
                                                   ItemSpacing="20"/>
                            </CarouselView.ItemsLayout>
                            <CarouselView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Style="{StaticResource Frame}"
                                           HeightRequest="250"
                                           WidthRequest="450">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10*"/>
                                                <RowDefinition Height="90*"/>
                                                <RowDefinition Height="10*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*"/>
                                                <ColumnDefinition Width="70*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Row="0"
                                                   Grid.Column="0"
                                                   Grid.RowSpan="3"
                                                   Source="{Binding poster_url}"
                                                   Margin="5"/>
                                            <Label Grid.Row="0"
                                                   Grid.Column="1"
                                                   HorizontalTextAlignment="Start"
                                                   Style="{StaticResource Label}"
                                                   Text="{Binding title}"/>
                                            <Label Grid.Row="1"
                                                   Grid.Column="1"
