                                                   HorizontalTextAlignment="Start"
                                                   Style="{StaticResource Label}"
                                                   Text="{Binding overview}"/>
                                            <Label Grid.Row="2"
                                                   Grid.Column="1"
                                                   HorizontalTextAlignment="Center"
                                                   Style="{StaticResource Label}"
                                                   Text="{Binding release_date}"/>
                                            <Label Grid.Row="2"
